<%- include('../partials/header'); -%>
<body style="background-image: linear-gradient(to bottom, #33ccff 0%, #ff99cc 100%); margin: auto; max-height:500px; max-weight: 500px;"  >
    <div class="col-8">
        <div class="jumbotron">
    <%- include('../partials/menu'); -%>
            <form action="/search" method="post" style="color: black;">
                <div class="row">
                <div class="col-3">
                </div>
                <div class="col-5">
                    <input class="form-control" type="text" name="artist" placeholder="Enter Artist Name">
                </div>
                <div class="col-3" style="color: black";>
                    <button id="my_submit_button" class="btn btn-primary btn-block login-btn" style="background-color: black;" onclick = "searchButton(document.getElementById('artist').value)"> Search </button>
                </div>
                </div>
            </form>
        </div>
    </div>
    <% if(error){ %>
        <div class="alert alert-danger">Error</div>
        <% } else if(search){ %>
            <div class="jumbotron" style="background-color: White;">
                <img src=<%- imageLink %> alt="No image">
                <h5><%- bandName %></h5>
                <br>
                <table>
                    <tr>
                        <td>
                            <a class="btn btn-primary text-white" style="background-color: black" href=<%- link %>>Artist Website</a>
                        </td>
                    </tr>
                </table>
                <br>
                <h6>Formation Year: </h6>
                <p><%- year%></p>
                <h6>Genre: </h6>
                <p><%- genre %></p>
                <h6>Bio: </h6>
                <p><%- bio %></p>
            </div>
        <% } %>
        
        <br>

        <div style="text-align:center">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#search" style="background-color: black">Add Search History</button>
        </div>
    </div>
        <div class="modal fade" id="search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title" id="exampleModalLabel">Add To Your Search History</h1>
                </div>
                <form class="" action="/addSearch" method="post">
                    <div class="col-8">
                        <div class="jumbotron">
                    <div class="modal-body">
                        <table>
                            <tr>
                                <td>
                                    Artist Name <input id="band" class="form-control" type="text" value="<%- bandName %>" readonly="readonly" name="band"> </td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Facebook <input id="band" class="form-control" type="text" value="<%- link %>" readonly="readonly" name="link"> </td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Formation Date <input id="band" class="form-control" type="text" value="<%- year %>" readonly="readonly" name="year"> </td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Genre <input id="band" class="form-control" type="text" value="<%- genre %>" readonly="readonly" name="genre"> </td>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Last FM Chart <input id="band" class="form-control" type="text" value="<%- fM %>" readonly="readonly" name="fM"> </td>
                                </td>
                            </tr>
                        </table>
                    </div>
                    </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="button" class="close" data-dismiss="modal"> No </button>
                        <input class="btn btn-primary" type="submit" name="submit" value = "Add Search"/>
                    </div>
                </form>
            </div>
          </div>

</div>
</div>
<%- include('../partials/footer'); -%>
